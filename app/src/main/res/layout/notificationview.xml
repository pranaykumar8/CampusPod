<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="100dp"
    app:cardMaxElevation="25dp"

    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/Neventcard"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/teal_700"

            android:padding="10dp">

            <TextView
                android:id="@+id/Ntitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/Ndate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ntitle"
                android:layout_marginTop="19dp"
                android:text="Event Date"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/Ntime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ntitle"
                android:layout_marginStart="136dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/Ndate"
                android:text="Event Time"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/Nvenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ndate"
                android:layout_marginTop="18dp"
                android:text="EventVenue"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold">

            </TextView>


            <Button
                android:id="@+id/Join"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Nvenue"
                android:layout_alignParentStart="true"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="207dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="6dp"
                android:backgroundTint="#304FFE"
                android:text="Join"
                android:textSize="20dp"
                android:textStyle="normal">

            </Button>


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
