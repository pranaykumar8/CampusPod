<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coordinator.CoordinatorDashboardAccount">


<LinearLayout
    android:id="@+id/linear_layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backtoCdashboard"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/back">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_marginEnd="40dp"
        android:text="Account"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="28dp"
        android:textStyle="bold">

    </TextView>

</LinearLayout>

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_below="@+id/linear_layout1"
    android:background="@color/teal_200"

    >

</View>

<RelativeLayout
    android:id="@+id/relLay1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfilePic"
        android:layout_width="131dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="138dp"
        android:src="@drawable/ic_baseline_person_24">

    </de.hdodenhof.circleimageview.CircleImageView>

    <Button
        android:id="@+id/SaveProfile"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ProfilePic"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="96dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:backgroundTint="#6ADF79"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/EditProfile"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ProfilePic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="231dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="96dp"
        android:layout_weight="1"
        android:backgroundTint="#F48FA3"
        android:text="Edit"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold">

    </Button>

</RelativeLayout>

<View
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/relLay1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    android:background="@color/teal_200"

    >

</View>

<LinearLayout
    android:id="@+id/name_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view2"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="normal">

    </TextView>

    <EditText
        android:id="@+id/name_section_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Govardhana Vivek"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="18dp"
        android:textStyle="normal">

    </EditText>

</LinearLayout>

<View
    android:id="@+id/view3"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/name_section"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="30dp"
    android:background="@color/grey">

</View>

<LinearLayout
    android:id="@+id/RollID_Section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view3"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Roll ID"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="normal">

    </TextView>

    <EditText
        android:id="@+id/RollID_Section_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="19P61A1235"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="18dp"
        android:textStyle="normal">

    </EditText>

</LinearLayout>

<View
    android:id="@+id/view4"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/RollID_Section"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="30dp"
    android:background="@color/grey">

</View>

<LinearLayout
    android:id="@+id/Email_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view4"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="normal">

    </TextView>

    <EditText
        android:id="@+id/Email_section_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Govardhanavivek32@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="18dp"
        android:textStyle="normal">

    </EditText>

</LinearLayout>

<View
    android:id="@+id/view5"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/Email_section"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="30dp"
    android:background="@color/grey">

</View>

<LinearLayout
    android:id="@+id/Password_Section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view5"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="normal">

    </TextView>

    <EditText
        android:id="@+id/Password_Section_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Vivek@32"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="18dp"
        android:textStyle="normal">

    </EditText>

</LinearLayout>

<View
    android:id="@+id/view6"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/Password_Section"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="30dp"
    android:background="@color/grey">

</View>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/view6"
    android:orientation="vertical">

    <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="30dp"
        android:text="Update">

    </Button>

</LinearLayout>

</RelativeLayout>